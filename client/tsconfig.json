{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "build",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "types": [
      "vite/client",
      "@types/node"
    ],
    "paths": {
      "*": ["node_modules/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
